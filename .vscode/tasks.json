{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "check-spell",
            "command": "npx",
            "type": "shell",
            "args": [
                "cspell-cli",
                "lint",
                "--relative"
            ],
            "problemMatcher": [
                "$gcc"
            ],
            "presentation": {
                "reveal": "always"
            },
            "group": "build"
        },
        {
            "label": "install-cspell",
            "command": "npm",
            "type": "shell",
            "args": [
                "install",
                "git+https://github.com/streetsidesoftware/cspell-cli"
            ],
            "problemMatcher": [
                "$gcc"
            ],
            "presentation": {
                "reveal": "always"
            },
            "group": "build"
        },
        {
            "label": "cherry-top-x",
            "type": "shell",
            "options": {
                "shell": {
                    "executable": "/usr/bin/bash",
                    "args": [
                        "-l"
                    ]
                }
            },
            "command": "git",
            "args": [
                "checkout bullseye",
                "&&",
                "git",
                "cherry-pick",
                "$(git log --oneline dev -n ${input:cherryTopX} | cut -d ' ' -f1)",
                "&&",
                "git",
                "checkout bookworm",
                "&&",
                "git",
                "cherry-pick",
                "$(git log --oneline dev -n ${input:cherryTopX} | cut -d ' ' -f1)",
                "&&",
                "git",
                "checkout dev"
            ],
            "problemMatcher": [
                "$gcc"
            ]
        }
    ],
    "inputs": [
        {
            "id": "cherryTopX",
            "type": "promptString",
            "description": "How many commits to cherry-pick?"
        }
    ]
}
